<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<Button
android:id="@+id/pararContinuar2"
android:layout_width="263dp"
android:layout_height="42dp"
android:onClick="playSonido2"
android:text="@string/Reproducir2"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/pararContinuar" />

<Button
android:id="@+id/pararContinuar"
android:layout_width="263dp"
android:layout_height="42dp"
android:onClick="playSonido1"
android:text="@string/Reproducir"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.497"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/botonReproducirVideo" />

<Button
android:id="@+id/botonReproducirVideo"
android:layout_width="264dp"
android:layout_height="46dp"
android:onClick="cargarMultimedia"
android:text="@string/ReproducirVideo"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>