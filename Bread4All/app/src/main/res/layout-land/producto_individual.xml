<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="645dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/holo_orange_light"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="644dp"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ImageView
                android:id="@+id/foto_producto"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/nombre_producto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/foto_producto"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/precio"
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nombre_producto"
                android:layout_marginLeft="231dp"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@+id/foto_producto"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/moneda"
                android:layout_width="55dp"
                android:layout_height="23dp"
                android:layout_alignBottom="@+id/precio"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="-1dp"
                android:layout_toEndOf="@+id/precio" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>